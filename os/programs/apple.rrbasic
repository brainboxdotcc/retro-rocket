PRINT "Loading... ";
SPRITELOAD bad_apple, "/images/bad-apple.gif"
CLS
AUTOFLIP FALSE

GCOL &888888
RECTANGLE 0, 0, GRAPHICS_WIDTH - 1, GRAPHICS_HEIGHT - 1

REPEAT
    PLOT bad_apple, GRAPHICS_CENTRE_X - 160, GRAPHICS_CENTRE_Y - 100
    FLIP
    SLEEP 66
    ANIMATE NEXT bad_apple
UNTIL INKEY$ <> ""

AUTOFLIP TRUE
CLS
END